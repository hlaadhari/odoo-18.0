<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Catégorie de sécurité STEG -->
        <record id="module_category_steg" model="ir.module.category">
            <field name="name">STEG Stock Management</field>
            <field name="description">Gestion des stocks STEG</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groupe: Utilisateur STEG -->
        <record id="group_steg_user" model="res.groups">
            <field name="name">STEG: Utilisateur</field>
            <field name="category_id" ref="module_category_steg"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
            <field name="comment">Utilisateur de base STEG - peut consulter les stocks de sa division</field>
        </record>

        <!-- Groupe: Gestionnaire Division STEG -->
        <record id="group_steg_division_manager" model="res.groups">
            <field name="name">STEG: Gestionnaire Division</field>
            <field name="category_id" ref="module_category_steg"/>
            <field name="implied_ids" eval="[(4, ref('group_steg_user'))]"/>
            <field name="comment">Gestionnaire de division STEG - peut gérer les stocks de sa division</field>
        </record>

        <!-- Groupe: Chef de Division STEG -->
        <record id="group_steg_division_chief" model="res.groups">
            <field name="name">STEG: Chef de Division</field>
            <field name="category_id" ref="module_category_steg"/>
            <field name="implied_ids" eval="[(4, ref('group_steg_division_manager'))]"/>
            <field name="comment">Chef de division STEG - peut approuver les demandes et gérer sa division</field>
        </record>

        <!-- Groupe: Administrateur STEG -->
        <record id="group_steg_admin" model="res.groups">
            <field name="name">STEG: Administrateur</field>
            <field name="category_id" ref="module_category_steg"/>
            <field name="implied_ids" eval="[(4, ref('group_steg_division_chief')), (4, ref('stock.group_stock_manager'))]"/>
            <field name="comment">Administrateur STEG - accès complet au système</field>
        </record>

        <!-- Règles de sécurité par enregistrement -->
        
        <!-- Règle: Utilisateurs ne voient que leur division -->
        <record id="steg_division_user_rule" model="ir.rule">
            <field name="name">STEG Division: Utilisateur ne voit que sa division</field>
            <field name="model_id" ref="model_steg_division"/>
            <field name="domain_force">[('user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('group_steg_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Règle: Gestionnaires voient leur division -->
        <record id="steg_division_manager_rule" model="ir.rule">
            <field name="name">STEG Division: Gestionnaire voit sa division</field>
            <field name="model_id" ref="model_steg_division"/>
            <field name="domain_force">[('user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('group_steg_division_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Règle: Chefs de division voient leur division -->
        <record id="steg_division_chief_rule" model="ir.rule">
            <field name="name">STEG Division: Chef voit sa division</field>
            <field name="model_id" ref="model_steg_division"/>
            <field name="domain_force">['|', ('manager_id', '=', user.id), ('deputy_manager_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_steg_division_chief'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Règle: Produits - accès selon division -->
        <record id="product_template_division_rule" model="ir.rule">
            <field name="name">Produits: Accès selon division STEG</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force">['|', ('steg_division_id', '=', False), ('steg_division_id.user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('group_steg_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Règle: Stock Picking - accès selon division -->
        <record id="stock_picking_division_rule" model="ir.rule">
            <field name="name">Stock Picking: Accès selon division STEG</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="domain_force">['|', ('steg_division_id', '=', False), ('steg_division_id.user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('group_steg_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Règle: Stock Location - accès selon division -->
        <record id="stock_location_division_rule" model="ir.rule">
            <field name="name">Stock Location: Accès selon division STEG</field>
            <field name="model_id" ref="stock.model_stock_location"/>
            <field name="domain_force">['|', ('steg_division_id', '=', False), ('steg_division_id.user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('group_steg_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>