<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue Liste des Divisions STEG -->
        <record id="steg_division_tree_view" model="ir.ui.view">
            <field name="name">steg.division.tree</field>
            <field name="model">steg.division</field>
            <field name="arch" type="xml">
                <list string="Divisions STEG" decoration-muted="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="manager_id"/>
                    <field name="location_id"/>
                    <field name="product_count"/>
                    <field name="stock_move_count"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Vue Formulaire des Divisions STEG -->
        <record id="steg_division_form_view" model="ir.ui.view">
            <field name="name">steg.division.form</field>
            <field name="model">steg.division</field>
            <field name="arch" type="xml">
                <form string="Division STEG">
                    <header>
                        <button name="action_view_products" type="object" 
                                string="Voir les Produits" class="oe_highlight"
                                attrs="{'invisible': [('product_count', '=', 0)]}"/>
                        <button name="action_view_stock_moves" type="object" 
                                string="Mouvements de Stock"
                                attrs="{'invisible': [('stock_move_count', '=', 0)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_products" type="object" 
                                    class="oe_stat_button" icon="fa-cubes">
                                <field name="product_count" widget="statinfo" 
                                       string="Produits"/>
                            </button>
                            <button name="action_view_stock_moves" type="object" 
                                    class="oe_stat_button" icon="fa-exchange">
                                <field name="stock_move_count" widget="statinfo" 
                                       string="Mouvements"/>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Archivé" 
                                bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de la division"/>
                            </h1>
                            <h2>
                                <field name="code" placeholder="Code (ex: TEL)"/>
                            </h2>
                        </div>
                        
                        <group>
                            <group name="main_info">
                                <field name="description"/>
                                <field name="sequence"/>
                                <field name="color" widget="color"/>
                                <field name="active"/>
                            </group>
                            <group name="location_info">
                                <field name="location_id" 
                                       context="{'default_usage': 'internal', 'default_steg_division_id': id}"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Responsables" name="managers">
                                <group>
                                    <group name="manager_info">
                                        <field name="manager_id"/>
                                        <field name="deputy_manager_id"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Utilisateurs" name="users">
                                <field name="user_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="login"/>
                                        <field name="email"/>
                                        <field name="active"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue Kanban des Divisions STEG -->
        <record id="steg_division_kanban_view" model="ir.ui.view">
            <field name="name">steg.division.kanban</field>
            <field name="model">steg.division</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="manager_id"/>
                    <field name="product_count"/>
                    <field name="stock_move_count"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <strong><field name="name"/></strong>
                                        </div>
                                        <div class="o_secondary">
                                            <i class="fa fa-code"/> <field name="code"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_card_manage_pane">
                                        <div class="o_kanban_card_manage_section">
                                            <div>
                                                <i class="fa fa-user"/> 
                                                <field name="manager_id"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_card_footer">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span class="badge badge-pill">
                                                <i class="fa fa-cubes"/> <field name="product_count"/> produits
                                            </span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span class="badge badge-pill">
                                                <i class="fa fa-exchange"/> <field name="stock_move_count"/> mvts
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue Recherche des Divisions STEG -->
        <record id="steg_division_search_view" model="ir.ui.view">
            <field name="name">steg.division.search</field>
            <field name="model">steg.division</field>
            <field name="arch" type="xml">
                <search string="Rechercher Divisions STEG">
                    <field name="name" string="Division" 
                           filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                    <field name="manager_id"/>
                    <field name="location_id"/>
                    
                    <filter string="Actives" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archivées" name="inactive" domain="[('active', '=', False)]"/>
                    
                    <separator/>
                    <filter string="Avec Responsable" name="has_manager" 
                            domain="[('manager_id', '!=', False)]"/>
                    <filter string="Sans Responsable" name="no_manager" 
                            domain="[('manager_id', '=', False)]"/>
                    
                    <group expand="0" string="Grouper par">
                        <filter string="Responsable" name="group_manager" 
                                context="{'group_by': 'manager_id'}"/>
                        <filter string="Emplacement" name="group_location" 
                                context="{'group_by': 'location_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action pour les Divisions STEG -->
        <record id="steg_division_action" model="ir.actions.act_window">
            <field name="name">Divisions STEG</field>
            <field name="res_model">steg.division</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle division STEG
                </p>
                <p>
                    Les divisions STEG permettent d'organiser la gestion des stocks
                    par département (Télécom, Téléconduite, SCADA, etc.).
                </p>
            </field>
        </record>

    </data>
</odoo>