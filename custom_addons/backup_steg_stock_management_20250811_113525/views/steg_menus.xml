<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Menu Principal STEG -->
        <menuitem id="menu_steg_root" 
                  name="STEG Stock" 
                  sequence="5"
                  web_icon="steg_stock_management,static/description/icon.png"/>

        <!-- Sous-menu Tableau de Bord -->
        <menuitem id="menu_steg_dashboard" 
                  name="Tableau de Bord" 
                  parent="menu_steg_root" 
                  sequence="10"/>

        <!-- Sous-menu Gestion des Stocks -->
        <menuitem id="menu_steg_stock" 
                  name="Gestion des Stocks" 
                  parent="menu_steg_root" 
                  sequence="20"/>

        <!-- Sous-menu Demandes -->
        <menuitem id="menu_steg_requests" 
                  name="Demandes" 
                  parent="menu_steg_root" 
                  sequence="30"/>

        <!-- Sous-menu Configuration -->
        <menuitem id="menu_steg_config" 
                  name="Configuration" 
                  parent="menu_steg_root" 
                  sequence="90"
                  groups="steg_stock_management.group_steg_admin"/>

        <!-- === TABLEAU DE BORD === -->
        
        <!-- Alertes Stock -->
        <menuitem id="menu_steg_stock_alerts" 
                  name="Alertes Stock" 
                  parent="menu_steg_dashboard" 
                  action="product_template_action_steg_alerts" 
                  sequence="10"/>

        <!-- Stock par Division -->
        <menuitem id="menu_steg_stock_by_division" 
                  name="Stock par Division" 
                  parent="menu_steg_dashboard" 
                  action="stock_quant_action_steg_by_division" 
                  sequence="20"/>

        <!-- === GESTION DES STOCKS === -->
        
        <!-- Produits STEG -->
        <menuitem id="menu_steg_products" 
                  name="Produits STEG" 
                  parent="menu_steg_stock" 
                  action="product_template_action_steg" 
                  sequence="10"/>

        <!-- Emplacements STEG -->
        <menuitem id="menu_steg_locations" 
                  name="Emplacements" 
                  parent="menu_steg_stock" 
                  action="stock_location_action_steg" 
                  sequence="20"/>

