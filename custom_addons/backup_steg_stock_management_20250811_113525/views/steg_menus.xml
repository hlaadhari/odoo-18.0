        <menuitem id="menu_steg_users" 
                  name="Utilisateurs" 
                  parent="menu_steg_config" 
                  action="base.action_res_users" 
                  sequence="40"/>

        <!-- === RAPPORTS === -->
        
        <!-- Sous-menu Rapports -->
        <menuitem id="menu_steg_reports" 
                  name="Rapports" 
                  parent="menu_steg_root" 
                  sequence="80"/>

        <!-- Rapport Valorisation Stock -->
        <menuitem id="menu_steg_stock_valuation" 
                  name="Valorisation Stock" 
                  parent="menu_steg_reports" 
                  action="stock.action_stock_valuation_layer" 
                  sequence="10"/>

        <!-- Rapport Mouvements Stock -->
        <menuitem id="menu_steg_stock_moves_report" 
                  name="Mouvements de Stock" 
                  parent="menu_steg_reports" 
                  action="stock.stock_move_action" 
                  sequence="20"/>

