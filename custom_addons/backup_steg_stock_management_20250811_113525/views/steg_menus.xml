        <menuitem id="menu_steg_inventory" 
                  name="Inventaire" 
                  parent="menu_steg_stock" 
                  action="stock.action_inventory_form" 
                  sequence="30"/>

        <!-- === DEMANDES === -->
        
        <!-- Mes Demandes -->
        <menuitem id="menu_steg_my_requests" 
                  name="Mes Demandes" 
                  parent="menu_steg_requests" 
                  action="stock_picking_action_steg_requests" 
                  sequence="10"/>

        <!-- Approbations -->
        <menuitem id="menu_steg_approvals" 
                  name="Approbations" 
                  parent="menu_steg_requests" 
                  action="stock_picking_action_steg_approvals" 
                  sequence="20"
                  groups="steg_stock_management.group_steg_division_chief"/>

        <!-- Toutes les Demandes -->
        <menuitem id="menu_steg_all_requests" 
                  name="Toutes les Demandes" 
                  parent="menu_steg_requests" 
                  action="stock.action_picking_tree_all" 
                  sequence="30"
                  groups="steg_stock_management.group_steg_division_manager"/>

        <!-- === CONFIGURATION === -->
        
        <!-- Divisions STEG -->
        <menuitem id="menu_steg_divisions" 
                  name="Divisions STEG" 
                  parent="menu_steg_config" 
                  action="steg_division_action" 
                  sequence="10"/>

        <!-- Catégories de Produits -->
        <menuitem id="menu_steg_product_categories" 
                  name="Catégories de Produits" 
                  parent="menu_steg_config" 
                  action="product.product_category_action_form" 
                  sequence="20"/>

        <!-- Types d'Opérations -->
        <menuitem id="menu_steg_picking_types" 
                  name="Types d'Opérations" 
                  parent="menu_steg_config" 
                  action="stock.action_picking_type_form" 
                  sequence="30"/>

