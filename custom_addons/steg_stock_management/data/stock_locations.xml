<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Emplacements STEG par défaut -->
        
        <!-- Emplacements principaux -->
        <record id="location_steg_tunis" model="steg.location">
            <field name="name">Siège Social Tunis</field>
            <field name="code">STEG-TUN</field>
            <field name="location_type">office</field>
            <field name="city">Tunis</field>
            <field name="governorate">Tunis</field>
            <field name="address">38 Rue Kamel Ataturk, 1001 Tunis</field>
        </record>

        <record id="location_steg_warehouse_tunis" model="steg.location">
            <field name="name">Entrepôt Central Tunis</field>
            <field name="code">STEG-WH-TUN</field>
            <field name="location_type">warehouse</field>
            <field name="parent_id" ref="location_steg_tunis"/>
            <field name="city">Tunis</field>
            <field name="governorate">Tunis</field>
        </record>

        <!-- Centrales électriques -->
        <record id="location_steg_rades" model="steg.location">
