            <field name="name">Centrale de Sousse</field>
            <field name="code">STEG-SOU</field>
            <field name="location_type">central</field>
            <field name="city">Sousse</field>
            <field name="governorate">Sousse</field>
        </record>

        <record id="location_steg_ghannouch" model="steg.location">
            <field name="name">Centrale de Ghannouch</field>
            <field name="code">STEG-GHA</field>
            <field name="location_type">central</field>
            <field name="city">Ghannouch</field>
            <field name="governorate">Gabès</field>
        </record>

        <!-- Postes électriques -->
        <record id="location_steg_poste_tunis" model="steg.location">
            <field name="name">Poste HT Tunis Nord</field>
            <field name="code">STEG-POST-TUN-N</field>
            <field name="location_type">substation</field>
            <field name="city">Tunis</field>
            <field name="governorate">Tunis</field>
