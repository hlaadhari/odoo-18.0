        <record id="location_steg_workshop_tunis" model="steg.location">
            <field name="name">Atelier de Maintenance Tunis</field>
            <field name="code">STEG-WS-TUN</field>
            <field name="location_type">workshop</field>
            <field name="parent_id" ref="location_steg_tunis"/>
