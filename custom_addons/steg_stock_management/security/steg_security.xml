<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Catégories de sécurité -->
        <record id="module_category_steg_stock" model="ir.module.category">
            <field name="name">STEG Stock Management</field>
            <field name="description">Gestion du stock des pièces de rechange STEG</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groupes de sécurité -->
        
        <!-- Utilisateur de base -->
        <record id="group_steg_stock_user" model="res.groups">
            <field name="name">STEG Stock: Utilisateur</field>
            <field name="category_id" ref="module_category_steg_stock"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Accès en lecture aux pièces de rechange et équipements</field>
        </record>

        <!-- Gestionnaire de stock -->
        <record id="group_steg_stock_manager" model="res.groups">
            <field name="name">STEG Stock: Gestionnaire</field>
            <field name="category_id" ref="module_category_steg_stock"/>
            <field name="implied_ids" eval="[(4, ref('group_steg_stock_user'))]"/>
            <field name="comment">Gestion complète des stocks et mouvements</field>
        </record>

        <!-- Administrateur -->
        <record id="group_steg_stock_admin" model="res.groups">
            <field name="name">STEG Stock: Administrateur</field>
            <field name="category_id" ref="module_category_steg_stock"/>
            <field name="implied_ids" eval="[(4, ref('group_steg_stock_manager'))]"/>
            <field name="comment">Administration complète du module STEG</field>
        </record>

        <!-- Technicien terrain -->
        <record id="group_steg_technician" model="res.groups">
            <field name="name">STEG Stock: Technicien</field>
            <field name="category_id" ref="module_category_steg_stock"/>
            <field name="implied_ids" eval="[(4, ref('group_steg_stock_user'))]"/>
            <field name="comment">Accès mobile pour les opérations terrain</field>
        </record>

        <!-- Responsable maintenance -->
        <record id="group_steg_maintenance" model="res.groups">
            <field name="name">STEG Stock: Maintenance</field>
            <field name="category_id" ref="module_category_steg_stock"/>
            <field name="implied_ids" eval="[(4, ref('group_steg_stock_user'))]"/>
            <field name="comment">Gestion de la maintenance et des équipements</field>
        </record>

        <!-- Règles d'enregistrement (Record Rules) -->
        
        <!-- Règle pour les pièces de rechange - Utilisateurs -->
        <record id="steg_spare_part_user_rule" model="ir.rule">
            <field name="name">STEG Spare Parts: User Access</field>
            <field name="model_id" ref="model_steg_spare_part"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_steg_stock_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Règle pour les pièces de rechange - Gestionnaires -->
        <record id="steg_spare_part_manager_rule" model="ir.rule">
            <field name="name">STEG Spare Parts: Manager Access</field>
            <field name="model_id" ref="model_steg_spare_part"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_steg_stock_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Règle pour les équipements - Utilisateurs -->
        <record id="steg_equipment_user_rule" model="ir.rule">
            <field name="name">STEG Equipment: User Access</field>
            <field name="model_id" ref="model_steg_equipment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_steg_stock_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Règle pour les équipements - Maintenance -->
        <record id="steg_equipment_maintenance_rule" model="ir.rule">
            <field name="name">STEG Equipment: Maintenance Access</field>
            <field name="model_id" ref="model_steg_equipment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_steg_maintenance'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>