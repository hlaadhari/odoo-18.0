<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_steg_division_tree" model="ir.ui.view">
        <field name="name">steg.division.list</field>
        <field name="model">steg.division</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="warehouse_id"/>
            </list>
        </field>
    </record>

    <record id="view_steg_division_form" model="ir.ui.view">
        <field name="name">steg.division.form</field>
        <field name="model">steg.division</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_products" type="object" class="oe_stat_button" icon="fa-cubes">
                            <field name="product_count" widget="statinfo" string="Pièces"/>
                        </button>
                        <button name="action_view_moves" type="object" class="oe_stat_button" icon="fa-exchange">
                            <field name="move_count" widget="statinfo" string="Mouvements"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de la division"/>
                        </h1>
                        <h3>
                            <field name="code" placeholder="Code"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Informations générales">
                            <field name="warehouse_id"/>
                            <field name="active"/>
                        </group>
                        <group string="Responsables">
                            <field name="manager_id"/>
                            <field name="department_manager_id"/>
                        </group>
                    </group>
                    
                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Description de la division"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_steg_division" model="ir.actions.act_window">
        <field name="name">Divisions STEG</field>
        <field name="res_model">steg.division</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu supprimé - maintenant géré dans steg_dashboard_views.xml -->
</odoo>



