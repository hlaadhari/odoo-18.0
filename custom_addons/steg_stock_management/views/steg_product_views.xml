<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_steg_product_tree" model="ir.ui.view">
        <field name="name">steg.product.list</field>
        <field name="model">steg.product</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list decoration-warning="low_stock_alert" decoration-danger="qty_on_hand &lt;= 0">
                <field name="name"/>
                <field name="default_code"/>
                <field name="barcode"/>
                <field name="division_id"/>
                <field name="category"/>
                <field name="qty_on_hand"/>
                <field name="qty_available"/>
                <field name="min_qty"/>
                <field name="unit_price"/>
                <field name="supplier_id"/>
                <field name="state" widget="badge" decoration-success="state == 'active'" decoration-warning="state == 'obsolete'" decoration-danger="state == 'discontinued'"/>
                <field name="low_stock_alert" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_steg_product_form" model="ir.ui.view">
        <field name="name">steg.product.form</field>
        <field name="model">steg.product</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_barcode" type="object" string="Générer code-barres" 
                            class="btn-primary" invisible="barcode"/>
                    <field name="state" widget="statusbar" statusbar_visible="active,obsolete,discontinued"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Désignation de la pièce"/>
                        </h1>
                        <h3>
                            <field name="default_code" placeholder="Référence"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Informations générales">
                            <field name="division_id" required="1"/>
                            <field name="category"/>
                            <field name="supplier_id"/>
                            <field name="product_id"/>
                        </group>
                        <group string="Code-barres">
                            <field name="barcode"/>
                        </group>
                    </group>
                    
                    <group string="Stock et prix">
                        <group>
                            <field name="qty_on_hand"/>
                            <field name="qty_reserved"/>
                            <field name="qty_available"/>
                        </group>
                        <group>
                            <field name="unit_price"/>
                            <field name="min_qty"/>
                            <field name="max_qty"/>
                        </group>
                    </group>
                    
                    <group string="Alertes" invisible="not low_stock_alert">
                        <div class="alert alert-warning" role="alert">
                            <strong>⚠️ Alerte Stock Bas!</strong> 
                            La quantité en stock (<field name="qty_on_hand" nolabel="1"/>) 
                            est inférieure au minimum requis (<field name="min_qty" nolabel="1"/>).
                        </div>
                        <field name="low_stock_alert" invisible="1"/>
                    </group>
                    
                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Description détaillée de la pièce"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_steg_product" model="ir.actions.act_window">
        <field name="name">Pièces STEG</field>
        <field name="res_model">steg.product</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu supprimé - maintenant géré dans steg_dashboard_views.xml -->
</odoo>


