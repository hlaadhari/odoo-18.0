<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire division STEG -->
    <record id="view_steg_division_form" model="ir.ui.view">
        <field name="name">steg.division.form</field>
        <field name="model">steg.division</field>
        <field name="arch" type="xml">
            <form string="Division STEG">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_locations" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-map-marker">
                            <field name="location_ids" widget="statinfo" string="Emplacements"/>
                        </button>
                        <button name="action_view_users" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-users">
                            <field name="user_ids" widget="statinfo" string="Utilisateurs"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de la division"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="manager_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="color" widget="color"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" nolabel="1" placeholder="Description de la division..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue liste division STEG -->
    <record id="view_steg_division_tree" model="ir.ui.view">
        <field name="name">steg.division.tree</field>
        <field name="model">steg.division</field>
        <field name="arch" type="xml">
            <tree string="Divisions STEG">
                <field name="name"/>
                <field name="code"/>
                <field name="manager_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vue kanban division STEG -->
    <record id="view_steg_division_kanban" model="ir.ui.view">
        <field name="name">steg.division.kanban</field>
        <field name="model">steg.division</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="manager_id"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="code"/>
                                    <br/>
                                    <field name="manager_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue utilisateurs STEG -->
    <record id="view_res_users_form_steg" model="ir.ui.view">
        <field name="name">res.users.form.steg</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']" position="after">
                <page string="Informations STEG" name="steg_info">
                    <group>
                        <group string="Affectation">
                            <field name="steg_division"/>
                            <field name="steg_employee_number"/>
                            <field name="steg_department"/>
                            <field name="steg_position"/>
                            <field name="steg_phone_extension"/>
                        </group>
                        <group string="Autorisations">
                            <field name="steg_mobile_access"/>
                            <field name="steg_barcode_scanner"/>
                            <field name="steg_max_request_amount"/>
                            <field name="can_validate_division_requests"/>
                            <field name="can_override_stock_limits"/>
                            <field name="can_access_all_divisions"/>
                        </group>
                    </group>
                    <group string="Signature Électronique">
                        <field name="steg_signature" widget="image" class="oe_avatar"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_steg_division" model="ir.actions.act_window">
        <field name="name">Divisions STEG</field>
        <field name="res_model">steg.division</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle division STEG
            </p>
            <p>
                Les divisions permettent d'organiser les stocks et les utilisateurs
                selon l'organisation STEG (Télécom, Téléconduite, SCADA).
            </p>
        </field>
    </record>

    <record id="action_steg_users" model="ir.actions.act_window">
        <field name="name">Utilisateurs STEG</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('steg_division', '!=', False)]</field>
        <field name="context">{'default_groups_id': [(4, ref('group_steg_stock_user'))]}</field>
    </record>

    <!-- Tableau de bord STEG -->
    <record id="action_steg_dashboard" model="ir.actions.client">
        <field name="name">Tableau de Bord STEG</field>
        <field name="tag">steg_dashboard</field>
    </record>
</odoo>