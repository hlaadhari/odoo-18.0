<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire produit STEG -->
    <record id="view_product_template_form_steg" model="ir.ui.view">
        <field name="name">product.template.form.steg</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="steg_reference"/>
            </xpath>
            
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Informations STEG" name="steg_info">
                    <group>
                        <group string="Classification STEG">
                            <field name="steg_division_ids" widget="many2many_tags"/>
                            <field name="is_common_part"/>
                            <field name="steg_location_id" domain="[('usage', '=', 'internal')]"/>
                            <field name="supplier_reference"/>
                        </group>
                        <group string="Gestion des Stocks">
                            <field name="minimum_stock_level"/>
                            <field name="maximum_stock_level"/>
                            <field name="last_inventory_date" readonly="1"/>
                            <field name="last_movement_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Spécifications Techniques">
                            <field name="technical_specs" nolabel="1" placeholder="Spécifications techniques détaillées..."/>
                        </group>
                        <group string="Notes d'Installation">
                            <field name="installation_notes" nolabel="1" placeholder="Instructions d'installation et de maintenance..."/>
                            <field name="maintenance_interval"/>
                        </group>
                    </group>
                </page>
            </xpath>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_stock_moves" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-exchange">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Mouvements</span>
                    </div>
                </button>
                <button name="action_generate_barcode" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-barcode"
                        attrs="{'invisible': [('barcode', '!=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Générer Code-barres</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Vue liste produit STEG -->
    <record id="view_product_template_tree_steg" model="ir.ui.view">
        <field name="name">product.template.tree.steg</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="steg_reference"/>
                <field name="barcode"/>
            </xpath>
            <xpath expr="//field[@name='list_price']" position="after">
                <field name="qty_available"/>
                <field name="minimum_stock_level"/>
            </xpath>
        </field>
    </record>

    <!-- Vue recherche produit STEG -->
    <record id="view_product_template_search_steg" model="ir.ui.view">
        <field name="name">product.template.search.steg</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="steg_reference"/>
                <field name="barcode"/>
                <field name="supplier_reference"/>
            </xpath>
            <xpath expr="//filter[@name='consumable']" position="after">
                <separator/>
                <filter string="Pièces Communes" name="common_parts" domain="[('is_common_part', '=', True)]"/>
                <filter string="Stock Bas" name="low_stock" domain="[('qty_available', '&lt;', 'minimum_stock_level')]"/>
                <separator/>
                <filter string="Division Télécom" name="telecom" domain="[('steg_division_ids.code', '=', 'TELECOM')]"/>
                <filter string="Division Téléconduite" name="teleconduite" domain="[('steg_division_ids.code', '=', 'TELECONDUITE')]"/>
                <filter string="Division SCADA" name="scada" domain="[('steg_division_ids.code', '=', 'SCADA')]"/>
            </xpath>
            <xpath expr="//group[@name='group_by']" position="inside">
                <filter string="Division" name="group_by_division" domain="[]" context="{'group_by': 'steg_division_ids'}"/>
                <filter string="Emplacement" name="group_by_location" domain="[]" context="{'group_by': 'steg_location_id'}"/>
            </xpath>
        </field>
    </record>

    <!-- Actions pour les produits -->
    <record id="action_steg_product_template" model="ir.actions.act_window">
        <field name="name">Pièces de Rechange STEG</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('type', '=', 'product')]</field>
        <field name="context">{
            'default_type': 'product',
            'default_tracking': 'serial',
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle pièce de rechange
            </p>
            <p>
                Gérez vos pièces de rechange STEG avec traçabilité complète,
                codes-barres et gestion par division.
            </p>
        </field>
    </record>

    <record id="action_steg_product_telecom" model="ir.actions.act_window">
        <field name="name">Pièces Télécom</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('steg_division_ids.code', '=', 'TELECOM')]</field>
        <field name="context">{
            'default_type': 'product',
            'default_steg_division_ids': [(4, ref('division_telecom'))],
        }</field>
    </record>

    <record id="action_steg_product_teleconduite" model="ir.actions.act_window">
        <field name="name">Pièces Téléconduite</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('steg_division_ids.code', '=', 'TELECONDUITE')]</field>
        <field name="context">{
            'default_type': 'product',
            'default_steg_division_ids': [(4, ref('division_teleconduite'))],
        }</field>
    </record>

    <record id="action_steg_product_scada" model="ir.actions.act_window">
        <field name="name">Pièces SCADA</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('steg_division_ids.code', '=', 'SCADA')]</field>
        <field name="context">{
            'default_type': 'product',
            'default_steg_division_ids': [(4, ref('division_scada'))],
        }</field>
    </record>

    <record id="action_steg_product_common" model="ir.actions.act_window">
        <field name="name">Pièces Communes</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('is_common_part', '=', True)]</field>
        <field name="context">{
            'default_type': 'product',
            'default_is_common_part': True,
        }</field>
    </record>
</odoo>