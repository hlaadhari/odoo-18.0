<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue assistant stock STEG -->
    <record id="view_steg_stock_wizard_form" model="ir.ui.view">
        <field name="name">steg.stock.wizard.form</field>
        <field name="model">steg.stock.wizard</field>
        <field name="arch" type="xml">
            <form string="Assistant Stock STEG">
                <group>
                    <group>
                        <field name="operation_type"/>
                        <field name="product_id"/>
                        <field name="quantity"/>
                    </group>
                    <group>
                        <field name="location_id"/>
                        <field name="location_dest_id"/>
                        <field name="steg_division_id"/>
                        <field name="steg_urgency"/>
                    </group>
                </group>
                <group>
                    <field name="steg_purpose" placeholder="Objet de l'opération..."/>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirmer" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Vue assistant inventaire STEG -->
    <record id="view_steg_inventory_wizard_form" model="ir.ui.view">
        <field name="name">steg.inventory.wizard.form</field>
        <field name="model">steg.inventory.wizard</field>
        <field name="arch" type="xml">
            <form string="Assistant Inventaire STEG">
                <group>
                    <group>
                        <field name="location_id"/>
                        <field name="steg_division_id"/>
                    </group>
                    <group>
                        <field name="include_all_products"/>
                        <field name="product_ids" attrs="{'invisible': [('include_all_products', '=', True)]}"/>
                    </group>
                </group>
                <footer>
                    <button name="action_start_inventory" string="Démarrer Inventaire" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Actions pour les assistants -->
    <record id="action_steg_stock_wizard" model="ir.actions.act_window">
        <field name="name">Assistant Stock STEG</field>
        <field name="res_model">steg.stock.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_steg_inventory_wizard" model="ir.actions.act_window">
        <field name="name">Assistant Inventaire STEG</field>
        <field name="res_model">steg.inventory.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>